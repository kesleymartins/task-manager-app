<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagerApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.css" %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <div class="container">

      <% if flash.notice %>
        <div class="flash-message notice">
          <%= flash.notice %>
        </div>
      <% end %>

      <% if flash.alert %>
        <div class="flash-message alert">
          <%= flash.alert %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
